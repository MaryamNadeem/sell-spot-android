<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/orderHistoryImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/sample3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/orderHistoryUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text='"by maryamnadeem"'
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/orderHistoryPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Amount paid: Rs 4000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/goToProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:text="Tap to buy more items from maryamnadeem" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>